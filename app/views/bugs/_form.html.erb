<div class="container">
<h2 style="text-align:center;font-weight:bold;">Bugs_form</h2>
<br>
<%= form_with(model: [@project, @bug], local: true) do |form| %>
   <div class="form-group"> 
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>
   <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
   <%= form.label :deadline, 'Deadline:' %>
   <%= form.date_select :deadline%>
  </div>
  <div class="form-group">
  <%= form.select :bugtype, options_for_select(Bug.bugtypes), class: 'form-control'%>
  </div>
  <div class="form-group">
   <%= form.label :images %>
   <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>
  <div class="field form-group ">
    <%= form.label :status %><br>
    <%= form.select :status, ['New'], selected: 'New',class:"form-control", autocomplete:"status"%>
  </div>
  <div class="actions" >
    <%= form.submit "Submit", class:"btn btn-secondary" %> 
    <%= link_to 'Back', projects_path, class:"btn btn-secondary" %>
  </div>
<% end %>
<br/>
